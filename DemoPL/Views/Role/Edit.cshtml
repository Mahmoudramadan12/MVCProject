@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-action="Edit">



    <div class="form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input readonly class="form-control" asp-for="Id" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input  class="form-control" asp-for="RoleName" />
    </div>

    <a asp-action="AddOrRemoveUsers" asp-route-id ="@Model.Id" class="btn btn-success my-3 ">AddOrRemoveUsers</a>
    <br />


    <input type="submit" value="Save" class="btn btn-warning" /> |
    <a asp-action="Index" class="btn btn-light">Cancel</a>


</form>