@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}


<a asp-action="Create" class="btn btn-success">Add New Role</a>
<br />

@if (Model.Count() > 0)
{
    <h1>All Roles</h1>

    <form asp-action="Index" class="p-2">

        <div class="form-group position-relative">
            <input type="text" name="SearchValue" class="form-control w-50 m-auto" placeholder="Role's Name" />
            <button type="submit" class="btn btn-light position-absolute" style="right:25%; top:0; background-color: transparent; border-color: #1b1e21;">
                Search
            </button>
        </div>
    </form>

    <br />
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>


                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.RoleName)</th>
              
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>


        <tbody>

            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(u => role.Id)</td>
                    <td>@Html.DisplayFor(u => role.RoleName)</td>
                    
                    <partial name="_ButtonPartialView" , model="role.Id" />

                </tr>
            }





        </tbody>
    </table>


}

else
{
    <div class=" mt-5 alert alert-warning">
        <h3> There Is No Roles  </h3>
    </div>
}
