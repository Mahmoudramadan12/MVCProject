@model EmployeeViewModel
@inject IDepartmentRepository DepartmentRepo
@{
    var department = new SelectList(DepartmentRepo.GetAllAsync().Result, "Id", "Name");

}
<div class="form-group ">
    <label class="form-label " asp-for="Name"></label>
    <input class="form-control w-75" asp-for="Name" />
    <span class="text-danger" asp-validation-for="Name"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Image"></label>
    <input class="form-control w-75" asp-for="Image" />
    <span class="text-danger" asp-validation-for="Name"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input class="form-control w-75" asp-for="Age" />
    <span class="text-danger" asp-validation-for="Age"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input class="form-control w-75" asp-for="Salary" />
    <span class="text-danger" asp-validation-for="Salary"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control w-75" asp-items="@department" asp-for="DepartmentId">
        <option value="@null">--------Select Department ---------------- </option>
   </select>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input class="form-control w-75" asp-for="Address" />
    <span class="text-danger" asp-validation-for="Address"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input class="form-control w-75" asp-for="Email" />
    <span class="text-danger" asp-validation-for="Email"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input class="form-control w-75" asp-for="PhoneNumber" />
    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input class="form-control w-75" asp-for="HireDate" />
    <span class="text-danger" asp-validation-for="HireDate"></span>
</div>
<div class="form-check my-2">
    <input class="form-check-input " asp-for="IsActive" />
    <label class="form-check-label" asp-for="IsActive"></label>
    <span class="text-danger" asp-validation-for="IsActive"></span>
</div>