@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<div asp-validation-summary="All" class="text-danger">
</div>

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">
			
			<input asp-for="Email" placeholder="Email">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />
			<input asp-for="Password" placeholder="Password">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />
		
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RemeberMe" class="checkbox">
					<span>Remeber Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
			<p><a asp-action="GoogleLogin" asp-controller="Account">Login With Google</a></p>
		</form>
		<p>Don't have an Account? <a asp-action="Register">Sign Up Now!</a></p>
		<p> <a asp-action="ForgetPassword">Forget Password Using Email</a></p>
		<p> <a asp-action="ForgetPasswordSMS">Forget Password Using SMS</a></p>
	</div>
</div>

@section ValidationScriptSection {

	<partial name="_ValidationScriptsPartial">

}
